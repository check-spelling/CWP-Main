	name = "Fancy"
	fontstyle = {
		style = regular
		fontfiles = "bebas"
	}
	fontstyle = {
		style = bold
		fontfiles = "bebas"
	}
}

font = {
	name = "debug"
	fontstyle = {
		style = regular
		fontfiles = "cabin"
	}
}

font = {
	name = "standard_font"
	fontstyle = {
		style = regular
		fontfiles = "cabin"
	}
}

font = {
	name = "OpenSans"
	fontstyle = {
		style = regular
